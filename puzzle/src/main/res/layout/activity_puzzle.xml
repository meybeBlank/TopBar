<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9d2b5"
    tools:context="com.fz.puzzle.PuzzleActivity">

    <LinearLayout
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="步数"
            android:textSize="24sp"
            android:textColor="#20191f"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_puzzle_step"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#20191f"
            android:layout_gravity="center"
            android:paddingRight="60dp"
            android:paddingLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="时间"
            android:textSize="24sp"
            android:textColor="#20191f"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_puzzle_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="0"
            android:textColor="#20191f"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            />
    </LinearLayout>

    <GridView
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/gv_puzzle_pic_item"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></GridView>

    <ImageView
        android:id="@+id/iv_puzzle_original"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"></ImageView>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="getAriginal"
            android:text="原图"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="restart"
            android:text="重置"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="back"
            android:text="返回"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
